<!-- Socket.IO -->
<script src="/socket.io/socket.io.js"></script>

<style>
  [x-cloak] { display: none !important; }

  .fade-in {
    animation: fadeIn 0.3s ease-in;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .pulse-border {
    animation: pulseBorder 2s ease-in-out infinite;
  }

  @keyframes pulseBorder {
    0%, 100% { border-color: #6366f1; }
    50% { border-color: #8b5cf6; }
  }

  /* 타이머 경고 깜박임 */
  .timer-warning {
    animation: timerBlink 0.5s ease-in-out infinite;
    color: #ef4444;
  }

  @keyframes timerBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  /* 헤더 애니메이션: 글리치 + 그라디언트 이동 효과 */
  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .animate-glitch {
    position: relative;
    background-size: 200% auto;
    animation: glitchMain 5s infinite, gradientShift 3s ease infinite;
  }

  .animate-glitch::before,
  .animate-glitch::after {
    content: '라이어 게임';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, #6366f1, #8b5cf6, #6366f1);
    background-size: 200% auto;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 3s ease infinite;
  }

  .animate-glitch::before {
    text-shadow: 2px 0 #ff00ff;
    animation: glitchBefore 5s infinite, gradientShift 3s ease infinite;
    clip-path: polygon(0 0, 100% 0, 100% 35%, 0 35%);
  }

  .animate-glitch::after {
    text-shadow: -2px 0 #00ffff;
    animation: glitchAfter 5s infinite, gradientShift 3s ease infinite;
    clip-path: polygon(0 65%, 100% 65%, 100% 100%, 0 100%);
  }

  @keyframes glitchMain {
    0%, 94%, 100% { transform: translate(0); }
    95% { transform: translate(-2px, 1px); }
    96% { transform: translate(2px, -1px); }
    97% { transform: translate(-1px, 2px); }
    98% { transform: translate(1px, -2px); }
    99% { transform: translate(2px, 1px); }
  }

  @keyframes glitchBefore {
    0%, 94%, 100% { transform: translate(0); opacity: 0; }
    95% { transform: translate(3px, 0); opacity: 0.8; }
    96% { transform: translate(-3px, 0); opacity: 0.8; }
    97% { transform: translate(2px, 0); opacity: 0.8; }
    98%, 99% { transform: translate(0); opacity: 0; }
  }

  @keyframes glitchAfter {
    0%, 94%, 100% { transform: translate(0); opacity: 0; }
    95% { transform: translate(-3px, 0); opacity: 0.8; }
    96% { transform: translate(3px, 0); opacity: 0.8; }
    97% { transform: translate(-2px, 0); opacity: 0.8; }
    98%, 99% { transform: translate(0); opacity: 0; }
  }

  /* 타이핑 애니메이션 */
  .typing-text::after {
    content: '|';
    animation: blink 0.7s infinite;
    margin-left: 2px;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* 타이핑 중 점 애니메이션 */
  .typing-dot {
    width: 8px;
    height: 8px;
    background-color: #6b7280;
    border-radius: 50%;
    animation: typingDot 1.4s infinite ease-in-out;
  }

  .typing-dot:nth-child(1) {
    animation-delay: 0s;
  }

  .typing-dot:nth-child(2) {
    animation-delay: 0.2s;
  }

  .typing-dot:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes typingDot {
    0%, 60%, 100% {
      transform: scale(1);
      background-color: #6b7280;
    }
    30% {
      transform: scale(1.2);
      background-color: #6366f1;
    }
  }

  /* 지목 수 펄스 애니메이션 */
  .nomination-pulse {
    display: inline-block;
    animation: nominationPulse 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  @keyframes nominationPulse {
    0% { transform: scale(1); }
    40% { transform: scale(1.5); color: #e5e7eb; }
    100% { transform: scale(1); }
  }

  /* 라이어 공개 텍스트 애니메이션 */
  .liar-reveal-text {
    animation: liarReveal 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  @keyframes liarReveal {
    0% {
      transform: scale(0);
      opacity: 0;
    }
    50% {
      transform: scale(1.3);
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
