<template x-for="msg in chatMessages" :key="msg.timestamp">
  <div class="text-sm">
    <template x-if="msg.isSystem">
      <div class="text-center text-gray-500 py-1 border-t border-b border-gray-700 my-2" x-text="msg.message"></div>
    </template>
    <template x-if="!msg.isSystem">
      <div>
        <span class="font-medium text-primary" x-text="msg.nickname + ':'"></span>
        <span x-text="msg.message"></span>
      </div>
    </template>
  </div>
</template>
<div x-show="chatMessages.length === 0" class="text-gray-500 text-sm text-center py-4">
  아직 메시지가 없습니다
</div>
